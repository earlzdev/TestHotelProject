<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/hotels_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hotels_search"
        android:textColor="@color/search_hotels_text_color"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_mediumitalic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/large"
        android:layout_marginStart="@dimen/medium"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hotels_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:listitem="@layout/recycler_hotel_item"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/hotels_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:spanCount="2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>